<%= form_for comment do |f| %>
  <%= render 'shared/form_errors', object: comment %>  
  <%= f.hidden_field :commentable_id %>
  <%= f.hidden_field :commentable_type %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.submit 'Submit' %>
<% end %>