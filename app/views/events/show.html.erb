<div class='row'>
  <h1><%= @event.title %></h1>

  <span class="rsvp-container">
    <%= render "rsvp_button", event: @event, event_rsvp: @event_rsvp %>
  </span>
</div>

<div class='row'>
  <div class='span6'>
    <% if can? :manage, @event %>
      <p>
        <%= link_to "Edit event", edit_event_path(@event) %>
         | <%= link_to "Delete event", @event, method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %>
       </p>
    <% end %>

    <p>What</p>
    <p><%= @event.description %></p>
    <p>Where</p>
    <p><%= @event.location %></p>
    <p>When</p>
    <p><%= @event.date.strftime("%B %d, %Y") %></p>
    <p><%= @event.start_time.strftime("%I:%M %p") %> - <%= @event.end_time.strftime("%I:%M %p") %></p>
  </div>

  <div class='span6 display-organizers'>
    <%= render "organizers", event: @event %>
  </div>

  <div class='span6 display-attendees'>
    <%= render "attendees", event: @event %>
  </div>
</div>