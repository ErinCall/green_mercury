<h1><%= @concept.name %></h1>

<div class='description' id="description-links">
  <p id="latest-description"><%= @concept.latest.description %></p> 
    <% if @concept.concept_descriptions.count > 1 %>
     <p><%= link_to 'Delete and revert to previous description', concept_description_path(@concept.latest), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    <% end %>
    <p><%= link_to 'Edit description', new_concept_description_path(concept_id: @concept.id), remote: true, id: 'add-description-link' %></p>
</div>

<div id="add-description-form"></div>

<div id="description-history"><%= render 'description_history', concept: @concept %></div>
