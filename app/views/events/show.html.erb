<h1><%= @event.title %></h1>

<span class="rsvp-container"><%= render "rsvp_button", event: @event, event_rsvp: @event_rsvp %></span>

<div class='container'>
  <p>What</p>
  <p><%= @event.description %></p>
</div>
<div class='row'>
  <div class='span6'>
    <div class='container'>
      <p>Where</p>
      <p><%= @event.location %></p>
    </div>

    <div class='container'>
      <p>When</p>
      <p><%= @event.start_time %> - <%= @event.end_time %></p>
    </div>

    <% if can? :manage, @event %>
      <p><%= link_to "Edit event", edit_event_path(@event) %></p>

      <p><%= link_to "Delete event", @event, method: :delete, data: { confirm: 'Are you sure you want to delete this event?' } %></p>
    <% end %>
  </div>

  <div class='span6 display-organizers'>
    <%= render "organizers", event: @event, organizers: @event.organizers %>
  </div>

  <div class='span6 display-attendees'>
    <%= render "attendees", event: @event, attendees: @event.attendees %>
  </div>

</div>