<div id='project-info' class='row'>
  <div class='span2'></div>
  <div class='span10'>
    <h2><%= @project.title %></h2>
    <h4><%= @project.start_date %> - <%= @project.end_date %></h4>
    <%= @project.description %>
  </div>
</div>
<div class='row'>
  <div id='sidebar' class='span3'>
    <div id='team'>
      <div id='mentors'>
        <h4>Mentors</h4>
        <ul class='unstyled'>
          <% @project.mentor_participations.each do |participation| %>
            <li>
              <div class='row'>
                <% if !participation.user_uuid.nil? %>
                  <div class='span4 photo'></div>
                  <div class='span8'>
                    <%= User.fetch_from_uuid(participation.user_uuid).name %>
                    <p class='muted'><%= participation.role %></p>
                  </div>
                <% else %>
                  <div class='span4 photo'></div>
                  <div class='span8'>
                    <%= link_to participation.role, mentor_participation_path(participation), method: 'patch' %>
                  </div>
                <% end %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <div id='members'>
        <h4>Members</h4>
        <ul class='unstyled'>
          <% @project.member_participations.each do |participation| %>
            <li>
              <div class='row'>
                <% if !participation.user_uuid.nil? %>
                  <div class='span4 photo'></div>
                  <div class='span8'>
                    <% User.fetch_from_uuid(participation.user_uuid).name %>
                    <%= participation.role %>
                  </div>
                <% end %>
                  <%= participation.role %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>


